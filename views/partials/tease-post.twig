{% extends 'partials/tease.twig' %}

{% block content %}
    <h3 class="h3"><a href="{{ post.link }}">{{ post.title }}</a></h3>
    {% if post.thumbnail.src %}
        <img src="{{ post.thumbnail.src }}" alt="{{ post.thumbnail.alt }}" title="{{ post.thumbnail.alt }}" />
    {% endif %}
    <p>
        {{
            post.excerpt({
                words: 50,
                read_more: 'Keep reading'
            })
        }}
    </p>
{% endblock %}
